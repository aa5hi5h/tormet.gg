// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  wallet    String?  @unique
  balance   Float    @default(0)
  createdAt DateTime @default(now())
  
  createdMatches Match[] @relation("MatchCreator")
  joinedMatches  Match[] @relation("MatchJoiner")
}

model Match {
  id          String   @id @default(cuid())
  gameType    GameType @default(CHESS)
  
  // Chess/Lichess specific
  gameId      String?  
  url         String?
  
  // League of Legends specific
  summonerName1   String?  // Creator's summoner name
  summonerName2   String?  // Joiner's summoner name
  summonerPuuid1  String?  // Creator's PUUID
  summonerPuuid2  String?  // Joiner's PUUID
  region          String?  // na1, euw1, kr, etc.
  riotMatchId     String?  // Riot match ID when detected
  
  wager       Float    @default(0)
  status      Status   @default(WAITING)
  winner      Winner?
  createdAt   DateTime @default(now())
  finishedAt  DateTime?
  
  creatorId   String
  creator     User     @relation("MatchCreator", fields: [creatorId], references: [id])
  
  joinerId    String?
  joiner      User?    @relation("MatchJoiner", fields: [joinerId], references: [id])
  
  createTxHash  String?
  joinTxHash    String?
  payoutTxHash  String?

  @@index([gameType, status])
}

enum GameType {
  CHESS
  LOL
  VALORANT
  DOTA2
  CSGO
}

enum Status {
  WAITING
  PLAYING
  FINISHED
  CANCELLED
}

enum Winner {
  WHITE
  BLACK
  DRAW
  CREATOR  // For non-chess games
  JOINER   // For non-chess games
}